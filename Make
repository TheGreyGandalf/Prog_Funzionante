JFLAGS = -g
JC = javac
.SUFFIXES: .java .class
.java.class:
        $(JC) $(JFLAGS) $*.java

CLASSES = \
        Main.Main.java \
        Classe_Conto.Conto.java \
        Struttura.MyPanel.java \
        Struttura.tab.java \
        Scrittura_File.ScritturaFile.java

default: classes

classes: $(CLASSES:.java=.class)

clean:
        $(RM) *.class
        
#compila i file e rimuove alla fine tutti i .class cos√¨ da evitare ogni volta di avere problemi
